.price-banner
  position: relative
  
  height: 30px
  background: #000
  
  color: #fff
  font-size: 11px
  
  overflow: hidden
  
.price-banner__scroll
  width: 100%
  
  overflow: hidden
  white-space: nowrap

.price-banner__scroll__ticker
  flex-wrap: nowrap
  
  display: flex
  margin: 0
  padding: 0

  list-style: none
  
  will-change: transform

  > li
    flex-shrink: 0
    
    padding: 0 10px
  
